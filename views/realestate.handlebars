{{!-- Main --}}
<div class="container-fluid h-100">
  <div class="row h-100">
    <div class="d-none d-lg-block col-lg-1 col-xl-1"></div>
    <div class="col-12 col-lg-10 col-xl-10">
      <div class="row">
        {{!-- Line Chart --}}
        <div class="col-12 my-4">
          <div class="content bg-light shadow rounded p-3">
            <h3 class="text-center">Real Estate Performance</h3>
            <div id="bar-chart-container">
              <canvas id="barChart"></canvas>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        {{!-- Purchase / Sell --}}
        <div class="col-12 mb-4">
          <div class="content bg-light shadow rounded p-3">
            <h3 class="text-center">Purchase / Sell</h3>
            <div id="purchase-sale-container">
              <form>
                <div class="form-group">
                  <label for="inputAddress">Address</label>
                  <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                </div>
                <div class="form-group">
                  <label for="inputAddress2">Address 2</label>
                  <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="inputCity">City</label>
                    <input type="text" class="form-control" id="inputCity">
                  </div>
                  <div class="form-group col-md-4">
                    <label for="inputState">State</label>
                    <select id="inputState" class="form-control">
                      <option selected>Choose...</option>
                      <option>...</option>
                    </select>
                  </div>
                  <div class="form-group col-md-2">
                    <label for="inputZip">Zip</label>
                    <input type="text" class="form-control" id="inputZip">
                  </div>
                </div>
                <div class="form-group">
                  <label for="date">Date</label>
                  <input type="date" class="form-control" id="date">
                </div>
                <div class="form-group">
                  <label for="price">Price</label>
                  <input type="number" class="form-control" id="price" placeholder="$8.00">
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        {{!-- Activity Table --}}
        <div class="col-12 mb-4">
          <div class="content bg-light shadow rounded overflow-auto p-3">
            <h3 class="text-center">Activity Log</h3>
            <table id="activityTable" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th scope="col">Date</th>
                  <th scope="col">Transaction</th>
                  <th scope="col">Name</th>
                  <th scope="col">Category</th>
                  <th scope="col">Price</th>
                  <th scope="col">Quantity</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row">01/01/2018</th>
                  <td>Sale</td>
                  <td>Condo</td>
                  <td>Real Estate</td>
                  <td>$68,000</td>
                  <td>1</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="d-none d-lg-block col-lg-1 col-xl-1"></div>
  </div>
</div>
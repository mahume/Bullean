{{!-- Main --}}
<div class="container-fluid h-100">
  <div class="row h-100">
    <div class="d-none d-lg-block col-lg-1 col-xl-1"></div>
    <div class="col-12 col-lg-10 col-xl-10">
      <div class="row">
        {{!-- Line Chart --}}
        <div class="col-12 my-4">
          <div class="content bg-light shadow rounded p-3">
            <h3 class="text-center">Crypto Performance</h3>
            <div class="bar-chart-container">
              <canvas id="cryptoLineChart"></canvas>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        {{!-- Purchase / Sell --}}
        <div class="col-12 mb-4">
          <div class="content bg-light shadow rounded p-3">
            <h3 class="text-center">Purchase / Sell</h3>
            <div class="purchase-sale-container">
              <form>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="cryptoTransactionType">Transaction</label>
                    <select class="form-control" id="cryptoTransactionType" required>
                      <option selected>Choose...</option>
                      <option value="purchase">Purchase</option>
                      <option value="sale">Sale</option>
                    </select>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="cryptoDate">Date</label>
                    <input type="date" class="form-control" id="cryptoDate" required>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="cryptoName">Crypto Name</label>
                    <input type="text" class="form-control" id="cryptoName" placeholder="Bitcoin" required>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="cryptoSymbol">Crypto Symbol</label>
                    <input type="text" class="form-control" id="cryptoSymbol" placeholder="BTC" required>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="cryptoPrice">Price</label>
                    <input type="number" class="form-control" id="cryptoPrice" placeholder="$8.00" required>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="cryptoQuantity">Quantity</label>
                    <input type="number" class="form-control" id="cryptoQuantity" placeholder="40" required>
                  </div>
                </div>
                <button id="cryptoSubmitBtn" class="btn btn-primary btn-block" type="submit">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        {{!-- Activity Table --}}
        <div class="col-12 mb-4">
          <div class="content bg-light shadow rounded overflow-auto p-3">
            <h3 class="text-center">Activity Log</h3>
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th scope="col">Date</th>
                  <th scope="col">Transaction</th>
                  <th scope="col">Name</th>
                  <th scope="col">Symbol</th>
                  <th scope="col">Price</th>
                  <th scope="col">Quantity</th>
                </tr>
              </thead>
              <tbody>
                {{#each data}}
                <tr>
                  <th scope="row">{{ formatDate transaction_date }}</th>
                  <td>{{ transaction_type }}</td>
                  <td>{{ coin_name }}</td>
                  <td>{{ coin_symbol }}</td>
                  <td>{{ formatNumber coin_price style="currency" currency="USD" }}</td>
                  <td>{{ coin_quantity }}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="d-none d-lg-block col-lg-1 col-xl-1"></div>
  </div>
</div>


{{!-- Main --}}
<div class="container-fluid h-100">
  <div class="row h-100">
    <div class="d-none d-lg-block col-lg-1 col-xl-1"></div>
    <div class="col-12 col-lg-10 col-xl-10">
      <div class="row">
        {{!-- Line Chart --}}
        <div class="col-12 my-4">
          <div class="content bg-light shadow rounded p-3">
            <h3 class="text-center">Crypto Performance</h3>
            <div id="bar-chart-container">
              <canvas id="barChart"></canvas>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        {{!-- Purchase / Sell --}}
        <div class="col-12 mb-4">
          <div class="content bg-light shadow rounded p-3">
            <h3 class="text-center">Purchase / Sell</h3>
            <div class="purchase-sale-container">
              <form>
                <div class="form-group">
                  <label for="formGroupExampleInput">Example label</label>
                  <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Example input">
                </div>
                <div class="form-group">
                  <label for="formGroupExampleInput2">Another label</label>
                  <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Another input">
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        {{!-- Activity Table --}}
        <div class="col-12 mb-4">
          <div class="content bg-light shadow rounded overflow-auto p-3">
            <h3 class="text-center">Activity Log</h3>
            <table id="activityTable" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th scope="col">Date</th>
                  <th scope="col">Transaction</th>
                  <th scope="col">Name</th>
                  <th scope="col">Category</th>
                  <th scope="col">Price</th>
                  <th scope="col">Quantity</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row">02/20/2019</th>
                  <td>Sale</td>
                  <td>Bitcoin</td>
                  <td>Crypto</td>
                  <td>$22.50</td>
                  <td>10</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="d-none d-lg-block col-lg-1 col-xl-1"></div>
  </div>
</div>
{{!-- Main --}}
<div class="container-fluid h-100">
  <div class="row h-100">
    <div class="d-none d-lg-block col-lg-1 col-xl-1"></div>
    <div class="col-12 col-lg-10 col-xl-10">
      <div class="row">
        {{!-- Line Chart --}}
        <div class="col-12 my-4">
          <div class="content bg-light shadow rounded p-3">
            <h3 class="text-center">Stocks Performance</h3>
            <div class="bar-chart-container">
              <canvas id="stocksLineChart"></canvas>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        {{!-- Purchase / Sell --}}
        <div class="col-12 mb-4">
          <div class="content bg-light shadow rounded p-3">
            <h3 class="text-center">Purchase / Sell</h3>
            <div class="purchase-sale-container">
              <form>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="stockTransactionType">Transaction</label>
                    <select class="form-control" id="stockTransactionType">
                      <option selected>Choose...</option>
                      <option>Purchase</option>
                      <option>Sale</option>
                    </select>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="stockDate">Date</label>
                    <input type="date" class="form-control" id="stockDate">
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="stockName">Stock Name</label>
                    <input type="text" class="form-control" id="stockName" placeholder="Google">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="stockSymbol">Stock Symbol</label>
                    <input type="text" class="form-control" id="stockSymbol" placeholder="GOOGL">
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="stockPrice">Price</label>
                    <input type="number" class="form-control" id="stockPrice" placeholder="$8.00">
                  </div>
                  <div class="form-group col-md-6">
                    <label for="stockQuantity">Quantity</label>
                    <input type="number" class="form-control" id="stockQuantity" placeholder="40">
                  </div>
                </div>
                <button id="stockSubmitBtn" class="btn btn-primary btn-block" type="submit">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        {{!-- Activity Table --}}
        <div class="col-12 mb-4">
          <div class="content bg-light shadow rounded overflow-auto p-3">
            <h3 class="text-center">Activity Log</h3>
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th scope="col">Date</th>
                  <th scope="col">Transaction</th>
                  <th scope="col">Name</th>
                  <th scope="col">Category</th>
                  <th scope="col">Price</th>
                  <th scope="col">Quantity</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row">03/02/2019</th>
                  <td>Purchase</td>
                  <td>Google</td>
                  <td>Stock</td>
                  <td>$10.00</td>
                  <td>42</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="d-none d-lg-block col-lg-1 col-xl-1"></div>
  </div>
</div>

